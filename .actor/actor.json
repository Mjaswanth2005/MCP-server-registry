{
  "actorSpecification": 1,
  "name": "mcp-server-registry",
  "title": "MCP Server Registry",
  "description": "Discovers and catalogs Model Context Protocol (MCP) servers across GitHub, NPM, and PyPI with deduplication, categorization, and compatibility information.",
  "version": "1.0.0",
  "buildTag": "latest",
  "main": "main.js",
  "dockerImage": "apify/actor-node:20-chrome",
  "environment": {
    "APIFY_MEMORY_MBYTES": 4096,
    "APIFY_TIMEOUT_SECS": 3600
  },
  "resources": {
    "monitoringApiErrorRate": 10,
    "monitoringMemoryBytes": 268435456
  },
  "storages": {
    "dataset": "default",
    "keyValueStore": "default",
    "requestQueue": "default"
  },
  "env": {
    "GITHUB_TOKEN": {
      "type": "string",
      "required": false,
      "description": "Optional GitHub token to increase rate limits"
    },
    "LOG_LEVEL": {
      "type": "string",
      "required": false,
      "default": "INFO"
    }
  },
  "input": {
    "type": "object",
    "properties": {
      "sources": {
        "type": "array",
        "items": { "type": "string", "enum": ["github","npm","pypi"] }
      },
      "maxServers": { "type": "integer", "minimum": 1 },
      "includeReadme": { "type": "boolean" },
      "githubToken": { "type": "string" }
    },
    "additionalProperties": true
  }
}
