        "overview": {
          "title": "All Servers",
          "transformation": {
            "fields": [
              "name",
              "description",
              "version",
              "source",
              "categories",
              "stars",
              "downloads",
              "isActive",
              "lastUpdated"
            ]
          },
          "display": {
            "component": "table",
            "properties": {}
          }
        }
      }
    }
  }
